    private void bttnTambahActionPerformed(java.awt.event.ActionEvent evt) {                                           
        DefaultTableModel model = (DefaultTableModel) tbl.getModel();
        model.addRow(new Object[]{textid.getText(),txtnama.getText()});
        reset();
    }                                          

    private void bttmupdateActionPerformed(java.awt.event.ActionEvent evt) {                                           
        DefaultTableModel model = (DefaultTableModel) tbl.getModel();
        if (tbl.getSelectedRow()==0) {
            if (tbl.getSelectedRow()==1){
                
            }else {
               JOptionPane.showMessageDialog(null, "Pilih Data yang akan diUbah");
            }
        }else {
            
            model.setValueAt(textid.getText(), tbl.getSelectedRow(),0);
            model.setValueAt(txtnama.getText(), tbl.getSelectedRow(),1);
            
        }
        reset();    
    }                                          

    private void bttmhapusActionPerformed(java.awt.event.ActionEvent evt) {                                          
        DefaultTableModel model = (DefaultTableModel) tbl.getModel();
        model.removeRow(tbl.getSelectedRow());
        reset();
    }                                         

    private void btmundiActionPerformed(java.awt.event.ActionEvent evt) {                                        
    DefaultTableModel model = (DefaultTableModel) tbl.getModel();
    int nRow = model.getRowCount(), nCol = model.getColumnCount();
    String[]tabeldata = new String[nRow];
    for (int i = 0; i<nRow; i++)
    tabeldata[i] = (String)model.getValueAt(i, 1);
        
    Random rnd = new Random();
    int idx = rnd.nextInt(tabeldata.length);
    JOptionPane.showMessageDialog(this, "Selamat Kepada Pemenang " + tabeldata[idx] );
    txthasil.setText(tabeldata[idx] );
        
    }                                       

